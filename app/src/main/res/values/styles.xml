<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:layout_marginBottom">@dimen/title_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/title_margin_top_left_right</item>
        <item name="android:layout_marginLeft">@dimen/title_margin_top_left_right</item>
        <item name="android:layout_marginRight">@dimen/title_margin_top_left_right</item>

    </style>

    <style name="author" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:layout_marginBottom">@dimen/author_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/author_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/author_margin_left_right</item>
    </style>

    <style name="date" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:layout_marginBottom">@dimen/date_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/date_margin_left</item>
    </style>

    <style name="section" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:gravity">right</item>
        <item name="android:layout_marginBottom">@dimen/section_margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/section_margin_right</item>
    </style>

</resources>
